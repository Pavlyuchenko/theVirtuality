---
import Layout from "../layouts/Layout.astro";
import Article from "../components/Article.astro";

const articles = [
    {
        title: "Intro : The Virtuality Blog",
        description:
            "Unsure of what this writing space is all about? Well let me explain in this short article.",
        image: "/logo.png",
        href: "/articles/the-virtuality-blog",
    },
    {
        title: "Intro : The Virtuality Blog",
        description:
            "Unsure of what this writing space is all about? Well let me explain in this short article.",
        image: "/logo.png",
        href: "/articles/the-virtuality-blog",
    },
    {
        title: "Intro : The Virtuality Blog",
        description:
            "Unsure of what this writing space is all about? Well let me explain in this short article.",
        image: "/logo.png",
        href: "/articles/the-virtuality-blog",
    },
];
---

<Layout title="Main Page | The Virtuality">
    <section id="newsletter-container">
        <div>
            <h2>Newsletter</h2>
            <div id="subscribe-box">
                <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Enter your email..."
                />
                <button id="subscribe-button">Subscribe</button>
            </div>
        </div>
    </section>
    <section class="white" id="articles">
        <h2>Articles</h2>
        <div style="height: .5rem;"></div>
        {
            articles.map((article) => {
                return (
                    <>
                        <Article {...article} />
                        <div style="height: 1rem;" />
                    </>
                );
            })
        }
    </section>
</Layout>

<script>
    document
        .getElementById("subscribe-button")
        ?.addEventListener("click", () => {
            subscribeToNewsletter();
        });

    function validateEmail(email: string) {
        return String(email)
            .toLowerCase()
            .match(
                /^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
            );
    }

    async function subscribeToNewsletter() {
        const emailElement = document.getElementById(
            "email"
        ) as HTMLInputElement;
        if (!validateEmail(emailElement.value)) {
            alert("Please enter a valid email address.");
            return;
        }

        fetch("https://database.deta.sh/v1/a0wcqftm/subscribers/items", {
            method: "PUT",
            headers: {
                "Content-Type": "application/json",
                "X-API-Key": "a0wcqftm_yRpSkMjsqkeBHgJ6hhEi14XW7JnXsAPr",
            },
            body: JSON.stringify({
                items: [
                    {
                        email: emailElement.value,
                        virtuality: true,
                        michal_pavlicek: false,
                        date: new Date().toISOString().slice(0, 10),
                    },
                ],
            }),
        })
            .then((res) => res.json())
            .then(() => {
                alert("Thanks for subscribing! :)");
                sendEmail(emailElement.value);
            });
    }

    async function sendEmail(email: string) {
        fetch("https://postmail.invotes.com/send", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                subject: "Someone subscribed to the newsletter!",
                text:
                    "Their email is: " +
                    email +
                    "\nGo checkout Deta Dashboard to inspect it more closely.",
                access_token: "09f05pw14odki9ncqcclr0oh",
                success_url: "/",
                error_url: "/",
            }),
        })
            .then((res) => res.json())
            .then((data) => {
                console.log(data);
            });
    }
</script>

<style>
    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-position: 0%;
    }
    .white {
        line-height: 1.6;
        margin: 1.5rem 0;
        border: 1px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
    }
    .white code {
        font-size: 0.875em;
        font-weight: bold;
        background: rgba(var(--accent), 12%);
        color: rgb(var(--accent));
        border-radius: 4px;
        padding: 0.3em 0.45em;
    }
    .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
        gap: 1rem;
        padding: 0;
    }

    #newsletter-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        padding: 30px 0;
    }
    h2 {
        margin-bottom: 10px;
        margin-top: 0;
        line-height: 1;
    }
    #subscribe-box {
        position: relative;
    }
    input {
        border: 1px solid var(--black);
        border-radius: 0.4rem;
        box-sizing: border-box;

        padding: 0.5rem;

        width: 50ch;

        font-family: "Segoe UI", system-ui, sans-serif;
    }
    button {
        font-family: "Segoe UI", system-ui, sans-serif;

        cursor: pointer;
    }
    #subscribe-button {
        position: absolute;
        right: 0;
        height: 100%;
        border: 0;

        background: var(--main-red);
        color: #fff;

        font-weight: 700;

        border-radius: 0.4rem;

        padding: 0 15px;

        transition: 0.2s;
    }
    #subscribe-button:hover {
        filter: brightness(0.9);
    }

    @media (max-width: 900px) {
        #newsletter-container {
            margin: 10px;
        }
        #newsletter-container div {
            max-width: 100%;
            box-sizing: border-box;
        }
        #newsletter-container div input {
            max-width: 100%;
        }
    }
</style>
