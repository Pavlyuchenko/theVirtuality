---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" href="/logo32.png" sizes="32x32" />
        <link rel="icon" href="/logo128.png" sizes="128x128" />
        <link rel="icon" href="/logo180.png" sizes="180x180" />
        <link rel="icon" href="/logo192.png" sizes="192x192" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <header>
            <div id="heading-container">
                <h1>
                    <a href="/" id="title-a">
                        <span class="text-gradient">Michal Pavlíček Blog</span
                        ></a
                    >
                </h1>
                <p id="heading-description">
                    ...a Data Science student, sci-fi lover and everything
                    tech-related enthusiast
                </p>
            </div>
            <nav>
                <a href="https://michal-pavlicek.tech">About</a>
            </nav>
        </header>
        <main>
            <slot />
        </main>
    </body>
</html>
<style is:global>
    :root {
        --main-red: #eb567b;
        --main-blue: #3fbcf8;
        --accent-gradient: linear-gradient(
            45deg,
            var(--main-red),
            var(--main-blue)
        );

        --black: #111825;
        --dark-blue: #2f3c7e;

        --container-width: 125ch;
    }
    html {
        font-family: "Segoe UI", system-ui, sans-serif;
        background-color: #f6f6f6;
        color: var(--black);
    }
    code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
            DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }

    header {
        margin: auto;
        padding: 1.5rem;
        max-width: var(--container-width);

        display: flex;
    }
    #logo {
        width: 80px;
    }

    #heading-container {
        display: flex;
        align-items: flex-end;

        height: 100%;
    }
    #title-a {
        text-decoration: none;
        color: var(--black);
    }
    #title-a:hover {
        text-decoration: underline;
    }
    h1 {
        font-size: 1.8rem;
        font-weight: 800;
        margin: 0;

        line-height: 1;
    }
    p {
        margin-bottom: 0;

        color: var(--black);
    }
    #the {
        font-size: 1.4rem;
        font-weight: 400;

        margin-left: 5px;
    }

    #heading-description {
        margin-left: 10px;
        font-size: 1rem;
    }

    nav {
        flex: 1000;

        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
    }

    nav a {
        color: var(--black);
        font-weight: 500;
        font-size: 1.1rem;
    }
    a:active {
        color: var(--black);
    }

    .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-position: 0%;
    }

    main {
        margin: auto;
        padding-top: 0;
        max-width: var(--container-width);
    }

    @media (max-width: 900px) {
        header {
            padding: 0.5rem;
        }

        #heading-description {
            display: none;
        }

        #logo {
            width: 60px;
        }
        h1 {
            font-size: 2rem;
        }
    }
</style>
